mixin left-menu($dashboard = true, $crud = false, $users = false, $change = false)
	div(class="w-full lg:w-1/5 lg:px-6 text-xl text-gray-800 leading-normal")
		div(class="w-full sticky inset-0 lg:h-auto overflow-x-hidden overflow-y-auto lg:overflow-y-hidden lg:block mt-0 z-20", style="top: 5em;")
			p(class="text-base font-bold py-2 lg:pb-6 text-gray-700") Menú
			ul.list-reset
				- var $dashboard_class = ($dashboard) ? 'active' : '';
				- var $crud_class = ($crud) ? 'active' : '';
				- var $users_class = ($users) ? 'active' : '';
				- var $change_password = ($change) ? 'active' : '';
				li(class="py-2 md:my-0 inline-block mr-6 sm:inline-block sm:mr-6 md:inline-block sm:mr-6 lg:block lg:mr-0 xl:block xl:mr-0")
					a.admin-left-nav-anchor(href="/administrador", class=`${$dashboard_class} block pl-4 align-middle text-gray-700 no-underline border-l-4 border-transparent lg:border-purple-500 lg:hover:border-purple-500`)
						span(class="pb-1 md:pb-0 text-sm font-bold text-gray-700") Dashboard
				li(class="py-2 md:my-0 inline-block mr-6 sm:inline-block sm:mr-6 md:inline-block sm:mr-6 lg:block lg:mr-0 xl:block xl:mr-0")
					a.admin-left-nav-anchor(href="/administrador/crear-admin", class=`${$crud_class} block pl-4 align-middle text-gray-700 no-underline border-l-4 border-transparent lg:hover:border-gray-400`)
						span(class="pb-1 md:pb-0 text-sm font-bold text-gray-700") Crear Administrador
				li(class="py-2 md:my-0 inline-block mr-6 sm:inline-block sm:mr-6 md:inline-block sm:mr-6 lg:block lg:mr-0 xl:block xl:mr-0")
					a.admin-left-nav-anchor(href="/administrador/cambiar-password", class=`${$change_password} block pl-4 align-middle text-gray-700 no-underline border-l-4 border-transparent lg:hover:border-gray-400`)
						span(class="pb-1 md:pb-0 text-sm font-bold text-gray-700") Cambiar Contraseña
				li(class="py-2 md:my-0 inline-block mr-6 sm:inline-block sm:mr-6 md:inline-block sm:mr-6 lg:block lg:mr-0 xl:block xl:mr-0")
					a.admin-left-nav-anchor(href="/administrador/usuarios", class=`${$users_class} block pl-4 align-middle text-gray-700 no-underline border-l-4 border-transparent lg:hover:border-gray-400`)
						span(class="pb-1 md:pb-0 text-sm font-bold text-gray-700") Usuarios Registrados