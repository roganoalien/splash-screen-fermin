extends ../layout-admin.pug

block content
	include ../nav-admin.pug
	include ../left-nav-admin.pug
	div(class="container w-full flex flex-wrap mx-auto px-2 pt-8 lg:pt-16 mt-16")
		+left-menu(true, false, false)
		div(class="w-full lg:w-4/5 p-8 mt-6 lg:mt-0 text-gray-900 leading-normal bg-white border border-gray-400 border-rounded shadow-xl flex flex-wrap")
			h1.title(class="w-full px-2 mb-4 text-xl font-bold uppercase text-gray-600") Dashboard
			h2.subtitle(class="w-full px-2 mb-4 text-lg font-bold text-gray-500") Informaci√≥n General
			div(class="w-full sm:w-6/12 lg:w-4/12 xl:w-4/12 px-2 mb-4")
				.border.border-gray-400.bg-white.rounded-b.flex.flex-col.justify-between.leading-normal.p-4
					div
						p.text-sm.text-gray-500.flex.items-center Usuarios Registrados hoy
						if usersToday
							p.text-admin-active.font-bold.text-2xl=usersToday
						else
							p.text-admin-active.font-bold.text-2xl 0
			div(class="w-full sm:w-6/12 lg:w-4/12 xl:w-4/12 px-2 mb-4")
				.border.border-gray-400.bg-white.rounded-b.flex.flex-col.justify-between.leading-normal.p-4
					div
						p.text-sm.text-gray-500.flex.items-center Usuarios del Mes
						if usersMonth
							p.text-admin-active.font-bold.text-2xl=usersMonth
						else
							p.text-admin-active.font-bold.text-2xl 0
			div(class="w-full sm:w-6/12 lg:w-4/12 xl:w-4/12 px-2 mb-4")
				.border.border-gray-400.bg-white.rounded-b.flex.flex-col.justify-between.leading-normal.p-4
					div
						p.text-sm.text-gray-500.flex.items-center Todos los usuarios registrados
						if usersTotal
							p.text-admin-active.font-bold.text-2xl=usersTotal
						else
							p.text-admin-active.font-bold.text-2xl 0