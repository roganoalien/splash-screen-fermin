body{
	background #e2e8f0
	font-family Arial, sans-serif
	font-size 14px
	min-height 100vh
	width 100vw
}
#alerts-holder{
	display none
}
.flex-center.form-group.justify-content-center.w-full{
	flex-container()
	margin-bottom 20px !important
	&.vertical{
		flex-container(center, column, center)
		margin-bottom 0 !important
		h1{
			color $c-white
			font-size 18px
			margin-bottom 0 !important
		}
		p{
			font-size 16px
		}
	}
}